<Window x:Class="WpfApp_EXAMEN.LoginSql"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EXAMEN"
        mc:Ignorable="d"
        Title="LoginSql" Height="460" Width="300" Background="Black">
    <Border Background="DarkCyan"  CornerRadius="20" Margin="20">
        <StackPanel  Margin="20" >
            <Label Content="Login" Foreground="White" FontSize="27" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username:" Foreground="White" FontSize="24"/>
            <TextBox Name="txtUserName" Background="LightCyan" Foreground="Black" FontSize="24"/>
            <Label Content="Password:" Foreground="White" FontSize="24"/>
            <PasswordBox Name="txtPassword" Background="LightCyan" Foreground="Black" FontSize="24"/>
            <Button Name="btnSubmit" Content="Submit" Margin="60 10" 
                    Background="Black" Foreground="White" FontSize="24" Click="btnSubmit_Click"/>
            <Label Content="Create new login..." Name="regist" Foreground="White" FontSize="18" HorizontalAlignment="Center" MouseDoubleClick="regist_MouseDoubleClick" />
        </StackPanel>
   </Border>
    
</Window>
