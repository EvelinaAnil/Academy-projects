<Window x:Class="WpfApp_EXAMEN.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EXAMEN"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="400" Background="Black">
    <Grid>
        <Border Background="DarkCyan"  CornerRadius="20" Margin="20">
            <StackPanel  Margin="20" >
                <Label Content="Create new login:" Foreground="White" FontSize="27" HorizontalAlignment="Center"/>
                <Separator></Separator>
                <Label Content="New Username:" Foreground="White" FontSize="24"/>
                <TextBox Name="txtNewUserName" Background="LightCyan" Foreground="Black" FontSize="24"/>
                <Label Content="New Password:" Foreground="White" FontSize="24"/>
                <PasswordBox Name="txtNewPassword" Background="LightCyan" Foreground="Black" FontSize="24"/>
                <Button Name="btnNewSubmit" Content="Submit" Margin="60 10" 
                    Background="Black" Foreground="White" FontSize="24" Click="btnNewSubmit_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
