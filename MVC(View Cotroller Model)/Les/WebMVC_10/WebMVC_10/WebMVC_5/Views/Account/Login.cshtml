
@model WebMVC_5.Models.ViewModels.UserRegister

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="col-sm-12" style="text-align:center">
            <h2>Вхід в систему</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12" style="text-align:center">
            <p class="lead">Будь ласка, введіть дані:</p>
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6 col-md-offset-4 col-sm-4 col-sm-offset-2">
                    <div class="row">
                        <div class="col-md-4">@Html.LabelFor(model => model.Email):</div>
                        <div class="col-md-5">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.Email), autofocus = "autofocus" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4">@Html.LabelFor(model => model.Password):</div>
                        <div class="col-md-5">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = @Html.DisplayNameFor(model => model.Password) })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-12" style="text-align:center">
                    <input type="submit" value="Увійти" class="btn btn-primary" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-12" style="text-align:center">
                    @Html.ActionLink("Реєстрація", "Register")
                </div>
            </div>
        }
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>